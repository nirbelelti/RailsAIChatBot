<div class="container">
  <div class="header">
    <h1>Edit user</h1>
  </div>
  <%= turbo_frame_tag dom_id(@user) do %>
    <%= render "form", user: @user %>
  <% end %>
  <div class="row mt-2">
    <div class="col">
      <%= link_to "Show user", user_path(@user), class: 'btn btn-primary' %>
    </div>
    <div class="col text-end">
      <%= link_to "Back to users", users_path, class: 'btn btn-secondary' %>
    </div>
  </div>
</div>