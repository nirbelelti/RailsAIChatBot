<%= turbo_frame_tag dom_id(chat) do %>
  <div class="row">
    <div class="col">
      <%= link_to (chat.history.nil? || chat.history.dig("massages",0,"content").nil? ? "chat_#{chat.id}" : chat.history.dig("massages",0,"content")),
                  set_current_chat_chat_path(chat),
                  data: { 'turbo-method' => :post },
                  class: "btn btn-outline-secondery w-100"
      %>
    </div>
    <div class="col">
      <%= link_to "X", chat_path(chat), data: { turbo_method: :delete,  turbo_confirm: "Are you sure?" },class: "btn btn-outline-secondery w-100" %>
    </div>
  </div>
<% end %>